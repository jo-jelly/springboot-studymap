 {{>layout/header}}
<body>

<div id="main_body">
     <h1>스프링 부트로 시작하는 웹서비스 ver.6월 24.2임당</h1>
     <h1>StudyMap</h1>
     <div class="col-md-12">
         <div class="row">
             <div class="col-md-6">
                 <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                 {{#userName}} <!--유저명이 들어왔을 경우에 사용 mustache는 if()문을 사용할수 없다.-->
                     Logged in as: <span id="user">{{userName}}</span>
                     <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                 {{/userName}}
                 {{^userName}} <!-- 유저명이 없을경우-->
                     <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                     <a href="/oauth2/authorization/naver" class="btn btn-success active" role="button">Naver Login</a>
                 {{/userName}}
             </div>
         </div>
     </div>
         <br>

 <div>
     <div id="main_aside">
     <aside>
         <h1>사이드입니다2</h1>
         <div><img src="../img/logopic2.png" alt="안나와요"></div>
         <h1>포럼들을 올리는 질문위치</h1>
     </aside>
     </div>

     <div id="main_row">
    <section id="project">
    <!--프로젝트 목록 출력 영역-->
    <table class="table table-horiaontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글 번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종 수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}} <!--posts라는 List를 순회 -->
        <tr>
            <td><a href="/posts/view/{{id}}">{{id}}</a></td> <!--List에서 뽑아낸 객체의 필드를 사용한다. -->
            <td><a href="/posts/update/{{id}}">{{title}}</a></td>
            <td>{{author}}</td>
            <td>{{modifiedDate}}</td>
        </tr>
        {{/posts}}
        </tbody>
    </table>
    </section>


         <section id="project">
    <!--스터디 그룹 목록 출력 영역-->
    <table class="table table-horiaontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글 번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종 수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#studyGroup}} <!--posts라는 List를 순회 -->
        <tr>
            <td><a href="/studyGroup/view/{{id}}">{{id}}</a></td> <!--List에서 뽑아낸 객체의 필드를 사용한다. -->
            <td><a href="/studyGroup/update/{{id}}">{{title}}</a></td>
            <td>{{author}}</td>
            <td>{{modifiedDate}}</td>
        </tr>
        {{/studyGroup}}
        </tbody>
    </table>
    </section>
 </div>
 </div>
</div>
</body>
