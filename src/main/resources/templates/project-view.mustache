{{>layout/header}}

<div id="view_body">

    <div class="card">
        <div class="card-header"><h4>{{projectView.author}}</h4>
            <span role="img" aria-label="eye" class="anticon anticon-eye">
            <svg viewBox="64 64 896 896" focusable="false" data-icon="eye" width="1em" height="1em" fill="currentColor" aria-hidden="true">
               <path d="M942.2 486.2C847.4 286.5 704.1 186 512 186c-192.2 0-335.4 100.5-430.2 300.3a60.3 60.3 0 000 51.5C176.6 737.5 319.9 838 512 838c192.2 0 335.4-100.5 430.2-300.3 7.7-16.2 7.7-35 0-51.5zM512 766c-161.3 0-279.4-81.8-362.7-254C232.6 339.8 350.7 258 512 258c161.3 0 279.4 81.8 362.7 254C791.5 684.2 673.4 766 512 766zm-4-430c-97.2 0-176 78.8-176 176s78.8 176 176 176 176-78.8 176-176-78.8-176-176-176zm0 288c-61.9 0-112-50.1-112-112s50.1-112 112-112 112 50.1 112 112-50.1 112-112 112z">
               </path>
            </svg>
        </span>
            <span class="post-views">{{projectView.views}}</span>
        </div>

        <div class="card-body">
            <h3 class="card-title">{{projectView.title}}</h3>
        </div>
        <div class="card-body" id="study_view_content">
            <h3 class="card-text" style="color: rgb(230, 0, 0);" >{{projectView.content}}</h3>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">지역: <span class="btn btn-outline-info btn-sm">{{projectView.area}}</span></li>
            <li class="list-group-item">모집인원: <span class="btn btn-outline-danger btn-sm">{{projectView.member}}</span></li>
            <li class="list-group-item">스터디 타입: <span class="btn btn-outline-success btn-sm" >{{projectView.studyType}}</span></li>
            <li class="list-group-item">상태: <span class="btn btn-outline-warning btn-sm">{{projectView.state}}</span></li>
        </ul>

        <div class="card-footer text-muted">
            {{projectView.modifiedDate}}
        </div>
    </div>
    <br>

    <hr>

    {{#pcomment}}<!--머스타치 반복문 사용시 scomment.id가 아닌 그 안에서 목록으로 보기 때문에 그냥 {id}}로 입력-->
        <div class="card">
            <div class="card-body">
                <!--머스타치 반복문 사용시 scomment.id가 아닌 그 안에서 목록으로 보기 때문에 그냥 {id}}로 입력-->
                <div id="comment_time">
                <span>{{writer}}</span>
                <a>{{modifiedDate}}</a>
                </div>
                <hr>
                {{content}}
            </div>
        </div>
        <br>
    {{/pcomment}}


    <div class="card">
        <form action="">
            <div class="mb-3 row" id="content_text" >
                <label for="content" id="content_textName" > 댓글입력</label>
                <div class="col-sm-8" rows="3">
                    <textarea type="text"  rows="3" class="form-control" id="content" placeholder="내용을 입력하세요"> </textarea>
                    <input type="hidden" class="form-control" id="id"  value="{{projectId}}" placeholder="{{projectId}}">
                    <input type="hidden" class="form-control" id="projectId"  value="{{projectId}}" placeholder="{{projectId}}">
                    <input type="hidden" class="form-control" id="userId"  value="{{userId}}" placeholder="{{userId}}">
                    <input type="hidden" class="form-control" id="writer"  value="{{writer}}" placeholder="{{writer}}">
                </div>
                <div style="padding-top: 20px; ">
                <button type="button" class="btn btn-primary" id="btn-pcomment" rows="1" style="height: 50px;">등록</button>
                </div>
            </div>
        </form>
    </div>
    <br>
    <br>

</div>
{{>layout/footer}}